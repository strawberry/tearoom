<h1 id="title">Welcome to the Tea Room</h1>

{{add-brewer store=store}}

<ul>
{{#each brewer in model}}
	<li>
		{{brewer-item model=brewer}}
	</li>
{{/each}}
</ul>

{{#if brewerSelected}}
	<h1>Thanks {{selectedBrewer.name}}</h1>
{{else}}
	<button {{action 'selectBrewer'}}>Who's round is it?!</button>
{{/if}}

<button {{action 'reset'}}> Reset </button>